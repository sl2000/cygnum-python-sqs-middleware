# This file sym linked to from /etc/nginx/sites-available
proxy_cache_path /home/ubuntu/cygnum/cache levels=1:2 keys_zone=cygnum_cache:10m max_size=1g inactive=3d use_temp_path=off;
proxy_cache_key "$scheme$request_method$request_uri";

server_tokens off;

upstream cygnum_server_dev {
    server unix:/home/ubuntu/cygnum/cygnum-dev.sock fail_timeout=0;
}

upstream cygnum_server_o_t {
    server unix:/home/ubuntu/cygnum/cygnum-o-t.sock fail_timeout=0;
}

upstream cygnum_server_o_l {
    server unix:/home/ubuntu/cygnum/cygnum-o-l.sock fail_timeout=0;
}


client_max_body_size 4G;

