uwsgi_cache_path /home/ubuntu/cygnum/cache levels=1:2 keys_zone=cygnum_cache:10m max_size=1g inactive=3d use_temp_path=off;

server {
    server_name dev.caci-es.co.uk;

    location / {
 
        uwsgi_cache cygnum_cache;
        uwsgi_cache_lock on;
        add_header X-Proxy-Cache $upstream_cache_status;

        include uwsgi_params;
        uwsgi_pass unix:/home/ubuntu/cygnum/cygnum.sock;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dev.caci-es.co.uk/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dev.caci-es.co.uk/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = dev.caci-es.co.uk) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name dev.caci-es.co.uk;
    return 404; # managed by Certbot

}

